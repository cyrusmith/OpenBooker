<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/account_list_item_height"
    android:orientation="horizontal" >
    
<ImageView 
    android:id="@+id/acc_icon"
    android:layout_width="@dimen/account_type_icon_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"/>

<TextView android:id="@+id/top_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/acc_icon"
    android:layout_above="@+id/acc_icon"/>

<TextView android:id="@+id/title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/acc_icon"
    android:layout_centerVertical="true"/>
    
<TextView android:id="@+id/bottom_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/acc_icon"
    android:layout_below="@+id/acc_icon"/>
    
    
</RelativeLayout>